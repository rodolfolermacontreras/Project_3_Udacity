# Azure OpenAI Configuration Example
# Copy this file to .env and fill in your actual values

# Main API Key (used for Whisper and GPT-4o)
AZURE_OPENAI_API_KEY=your_api_key_here

# Azure OpenAI Endpoints
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_COGNITIVE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# DALL-E 3 Configuration (if using a different endpoint)
DALLE_API_KEY=your_dalle_api_key_here
DALLE_ENDPOINT=https://your-dalle-resource.cognitiveservices.azure.com/

# Model Deployment Names
WHISPER_DEPLOYMENT=whisper
DALLE_DEPLOYMENT=dall-e-3
GPT4O_DEPLOYMENT=gpt-4o

# API Versions
WHISPER_API_VERSION=2024-06-01
DALLE_API_VERSION=2024-02-01
GPT4O_API_VERSION=2025-01-01-preview
